<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
    version="2.2">
	<managed-bean>
		<managed-bean-name>rentBean</managed-bean-name>
		<managed-bean-class>ch.hevs.managedbeans.RentBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>


	<navigation-rule>
		<display-name>welcomeForm.xhtml</display-name>
		<from-view-id>/welcomeForm.xhtml</from-view-id>

		<navigation-case>
			<from-outcome>memberForm</from-outcome>
			<to-view-id>/memberForm.xhtml</to-view-id>
		</navigation-case>

		<navigation-case>
			<from-outcome>deleteMemberForm</from-outcome>
			<to-view-id>/deleteMemberForm.xhtml</to-view-id>
		</navigation-case>

	</navigation-rule>

	<navigation-rule>
		<display-name>bookForm.xhtml</display-name>
		<from-view-id>/bookForm.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>#{renBean.performBooking}</from-outcome>
			<to-view-id>/confirmationForm.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
		<navigation-case>
			<from-outcome>welcomeForm</from-outcome>
			<to-view-id>/welcomeForm.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
	</navigation-rule>


	<navigation-rule>
		<display-name>confirmationForm.xhtml</display-name>
		<from-view-id>/confirmationForm.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>bookForm</from-outcome>
			<to-view-id>/bookForm.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>


	<navigation-rule>
		<display-name>memberForm.xhtml</display-name>
		<from-view-id>/memberForm.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>bookForm</from-outcome>
			<to-view-id>/bookForm.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>



</faces-config>
